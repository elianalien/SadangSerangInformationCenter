<InfoNgabandungan>:
    name: "Info Ngabandungan"

    FloatLayout:
        id: "container"
        size_hint: 1, None
        height: 1000
        FloatLayout:
            id: base
            canvas.before:
                Color:
                    rgb: 0.88, 0.88, 0.89
                Rectangle:
                    pos: self.pos
                    size: self.size

            #tweets
            FloatLayout:
                id: tweets
                size_hint: None, 1
                x: 250
                width: 1100

                canvas.before:
                    Color:
                        rgb: 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                ScrollView:
                    id: tweet_scroll
                    pos_hint: {'x': 0, 'y':0}

                    StackLayout:
                        id: tweet_container
                        size_hint: 1, None
                        spacing: 50

            #filters
            StackLayout:
                id: filters
                size_hint: None, 1
                x: tweets.x + tweets.width
                width: 1920 - self.x

                #padding
                Widget:
                    size_hint: 1, None
                    height: 30

                Label:
                    color: 0, 0, 0, 1
                    size_hint: None, None
                    width: self.texture_size[0] + 33 * 2
                    height: self.texture_size[1] + 5 * 2
                    text: "Pilih info berdasarkan kategori"
                    font_size: 25

                #padding
                Widget:
                    size_hint: 1, None
                    height: 27

                ToggleButton:
                    id: semua
                    background_normal: "info_bdg/lib/btn tampilkan semua.png"
                    background_down: "info_bdg/lib/btn tampilkan semua down.png"
                    size_hint: 1, None
                    height: 83
                    group: "fb"


            Image:
                x: 1513
                y: 20
                source:"info_bdg/lib/title-&-logo.png"
                size_hint: None, None
                width: 345
                height: 67

            #full sized image and website
            Button:
                id: full_sized_image_filter
                size_hint: None, None
                width: 0
                height: 0
                background_color: 0, 0, 0, 0.7
                opacity: 0
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Image:
                id: full_sized_image
                size_hint: 1, None
                height: 0
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}


<CefBrowser>:
    id: browser
    width: 1110
    height: 900


#stack layout
<Tweet>:
    id: tweet_container
    size_hint: 1, None
    height: 120
    spacing: 10

    FloatLayout:
        size_hint: None, 1
        width: 110
        Image:
            id: profile_image
            size_hint: None, None
            size: 80, 80
            pos_hint: {'top':1}

    BoxLayout:
        id: content_container
        size_hint: None, 1
        width: 900
        orientation:'vertical'
        spacing: 13

        Label:
            id: user_name
            color: 0, 0, 0, 1
            size_hint: None, None
            size: self.texture_size

            font_size: 24
            bold: True


        FloatLayout:
            id: content
            size_hint: 1, None
            height: 70

            Label:
                id: tweet_text
                color: 0.1, 0.1, 0.1, 1
                size_hint: 1, None
                text_size: self.width, None
                size: self.texture_size
                bold: False

                font_size: 35

                pos_hint: {'x':0, 'top':1}

            Button:
                id: link_button
                size_hint: None, None
                size: tweet_text.size
                opacity:0
                pos_hint: {'x':0, 'top':1}


#            Label:
#                id: hashtag
#                color: 0, 0, 0, 1
#                size_hint: 1, None
#                text_size: self.width, None
#                size: self.texture_size
#
#                font_size: 25

        FloatLayout:
            id: additional_image_cont
            size_hint: 1, None
            height: 0

            Image:
                id: additional_image
                pos_hint: {'center_x': 0.5, 'top':1}
            Button:
                id: additional_image_button
                pos_hint: {'center_x': 0.5, 'top':1}
                background_color: 1, 1, 1, 0

#box layout
<FilterSuperGroup>:
    size_hint: 1, None
    height: 360

    Label:
        id: title
        color: 0, 0, 0, 1
        size_hint: None, None
        width: self.texture_size[0] + 33 * 2
        height: self.texture_size[1] + 5 * 2
        font_size: 40
        bold: True

    Accordion:
        id: accordion
        orientation: 'vertical'
        size_hint: 1, None
        height: 300

#AccordionItem
<FilterGroup>:
    font_size: 30
    color: 1, 1, 1, 1

    StackLayout:
        id: filters

#togglebutton
<BtnFilter>:
    font_size: 28
    size_hint: None, None
    size: self.texture_size[0] + 42, self.texture_size[1] + 42
    color: 0.03, 0.35, 0.5, 1

    group: "fb"

    background_normal: "info_bdg/lib/filter bg normal.png"
    background_down: "info_bdg/lib/filter bg down.png"
    border: (18,24,18,24)